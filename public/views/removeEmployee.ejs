<!DOCTYPE html>

<html>
<head>
    
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Remove Employee</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"> -->

    <!-- Custom CSS link -->
    <link rel="stylesheet" type="text/css" href="css/removeEmployee.css">

    <!-- Font Awesome link -->
    <script src="https://kit.fontawesome.com/412f6580aa.js" crossorigin="anonymous"></script>
</head>
</head>

<body>
    <div class="container">
        <div id="somethin1">
            <div class="header">
                Remove Employee
            </div>
            <form action="/removeEmployee" method="post" class="form" id="form">
                <div class="col">
                    <label for="fName">First Name</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                            <i class="fa fa-user"></i>
                            </div>
                        </div> 
                    <input type="text" class="form-control" placeholder="First name" id="fName" name="fName">
                    </div>
                </div>
                <div class="col">
                    <label for="lName">Last Name</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                            <i class="fa fa-user"></i>
                            </div>
                        </div> 
                    <input type="text" class="form-control" placeholder="Last name" id="lName" name="lName">
                    </div>
                </div>
                <div class="col">
                    <label for="employeeID">Employee ID</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fa-regular fa-hashtag"></i>
                            </div>
                        </div> 
                    <input type="number" name="employeeID" id="employeeID" class="form-control">
                    </div>
                </div>            
                <button type="submit">Remove Employee</button>
            </form>
        </div>
        <div id="somethin2">

        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <!-- Link for using Axios to send requests -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>
        form.addEventListener("submit", sendData);
        
        function sendData(event) {
            event.preventDefault();

            const fNameValue = fName.value.trim();
            const lNameValue = lName.value.trim();
            const employeeIDVal = employeeID.value.trim();

            const data = {
                firstName: fNameValue,
                lastName: lNameValue,
                employeeID: employeeIDVal,
            }

            axios.post('/removeEmployee', data)
                .then((result) => {
                    alert(`${result.data.first} ${result.data.last} has been removed from the system`);
                })
                .catch((error) => {
                    alert("Oops! Something went wrong. Please, try again.");
                })
        }
    </script>
</body>
</html>