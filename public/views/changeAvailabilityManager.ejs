    <!-- Link for using Axios to send requests -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>
        const form = document.querySelector("#form");
        const monday = document.querySelector("#monday");
        const tuesday = document.querySelector("#tuesday");
        const wednesday = document.querySelector("#wednesday");
        const thursday = document.querySelector("#thursday");
        const friday = document.querySelector("#friday");
        const saturday = document.querySelector("#saturday");
        const sunday = document.querySelector("#sunday");
        const monday_choice = document.querySelector("#monday-options");
        const tuesday_choice = document.querySelector("#tuesday-options");
        const wednesday_choice = document.querySelector("#wednesday-options");
        const thursday_choice = document.querySelector("#thursday-options");
        const friday_choice = document.querySelector("#friday-options");
        const saturday_choice = document.querySelector("#saturday-options");
        const sunday_choice = document.querySelector("#sunday-options");


        function getCurrentAvailability() {
            let currentAvailability = '<%- availability %>';
            currentAvailability = JSON.parse(currentAvailability);

            Object.entries(currentAvailability).forEach(entry => {
                const [key, value] = entry;
                const checkbox = document.querySelector(`#${key}`);
                const select = document.querySelector(`#${key}-options`);

                checkbox.checked = true;
                select.disabled = false;

                select.value = value;
            })
        }

        getCurrentAvailability();


        monday.addEventListener('change', function () {
            if (monday.checked) {
                monday_choice.disabled = false;
            } else if (!monday.checked) {
                monday_choice.disabled = true;
            }
        })

        tuesday.addEventListener('change', function () {
            if (tuesday.checked) {
                tuesday_choice.disabled = false;
            } else if (!tuesday.checked) {
                tuesday_choice.disabled = true;
            }
        })

        wednesday.addEventListener('change', function () {
            if (wednesday.checked) {
                wednesday_choice.disabled = false;
            } else if (!wednesday.checked) {
                wednesday_choice.disabled = true;
            }
        })

        thursday.addEventListener('change', function () {
            if (thursday.checked) {
                thursday_choice.disabled = false;
            } else if (!thursday.checked) {
                thursday_choice.disabled = true;
            }
        })

        friday.addEventListener('change', function () {
            if (friday.checked) {
                friday_choice.disabled = false;
            } else if (!friday.checked) {
                friday_choice.disabled = true;
            }
        })

        saturday.addEventListener('change', function () {
            if (saturday.checked) {
                saturday_choice.disabled = false;
            } else if (!saturday.checked) {
                saturday_choice.disabled = true;
            }
        })

        sunday.addEventListener('change', function () {
            if (sunday.checked) {
                sunday_choice.disabled = false;
            } else if (!sunday.checked) {
                sunday_choice.disabled = true;
            }
        })

        form.addEventListener("submit", handleFormSubmit);

        function handleFormSubmit(event) {
            if (!checkInputs()) {
                event.preventDefault();
            } else {
                sendData(event);
            }
        }

        function sendData(event) {
            event.preventDefault();

            const newAvailability = {}
            const checkboxes = document.querySelectorAll('input[type="checkbox"]:checked');
            const periods = document.querySelectorAll('select:enabled');
            for (let i = 0; i < periods.length; i++) {
                newAvailability[checkboxes[i].id] = periods[i].value;
            }

            const data = {
                availability: newAvailability
            };

            axios.put(`/changeAvailabilityManager/<%= id %>`, data)
                .then((result) => {
                    if (result.status === 200) {
                        alert("Your availability has been updated!");
                    }
                })
                .catch((error) => {
                    console.log(error);
                })
        }

        function checkInputs() {
            let success = false;
            const checkboxes = document.querySelectorAll('input[type="checkbox"]:checked');
            if (checkboxes.length === 0) {
                setErrorFor("Availability can't be blank");
                success = false;
            } else if (checkboxes.length !== 0) {
                setSuccessFor();
                success = true;
            }
            return success;
        }

        function setErrorFor(message) {
            const small = document.querySelector("small");
            small.innerText = message;
            small.parentElement.className = 'col control error';
        }

        function setSuccessFor() {
            const small = document.querySelector("small");
            small.parentElement.className = 'col control success';
        }
    </script>
